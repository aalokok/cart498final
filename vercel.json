{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".",
  "installCommand": "npm ci",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "frontend/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/js/(.*)",
      "dest": "/frontend/dist/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/frontend/dist/css/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/frontend/dist/img/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/dist/favicon.ico"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/articles/cron/refresh-and-clean",
      "schedule": "0 0 * * *"
    }
  ]
} 