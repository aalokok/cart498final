{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"
    },
    {
      "src": "^/favicon.ico$",
      "dest": "frontend/dist/favicon.ico"
    },
    {
      "src": "^/js/(.*)",
      "dest": "frontend/dist/js/$1"
    },
    {
      "src": "^/css/(.*)",
      "dest": "frontend/dist/css/$1"
    },
    {
      "src": "^/img/(.*)",
      "dest": "frontend/dist/img/$1"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "frontend/dist/assets/$1"
    },
    {
      "src": "^/fonts/(.*)",
      "dest": "frontend/dist/fonts/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)", 
      "dest": "frontend/dist/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/articles/cron/refresh-and-clean",
      "schedule": "0 0 * * *"
    }
  ]
} 