{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:backend"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" } 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/articles/cron/refresh-and-clean",
      "schedule": "0 0 * * *"
    }
  ]
} 