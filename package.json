{
  "name": "the-actual-informer",
  "version": "1.0.0",
  "description": "A web application that fetches real news and uses AI to transform them into exaggerated versions",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "frontend": "cd frontend && npm run serve",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend\""
  },
  "keywords": [
    "news",
    "ai",
    "generative",
    "media",
    "satire"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.2",
    "openai": "^4.91.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "ts-node-dev": "^2.0.0"
  }
}
